        <div class="resena">
            <div class="titlo">
                <h1>RESEÑAS</h1>
            </div>
            <form method="post" action='@Url.Action("EnviarReseña","Home")' id="formReseñas">
              <input type="text" placeholder="Buscar reseñas" name="texto">
              <input type="hidden" name="idUsuario" value=@ViewBag.Usuario.IdUsuario>
              <input type="hidden" name="idPelicula" value=@ViewBag.Card.IdCard>
              <input type="hidden" name="nombreUsuario" value=@ViewBag.Usuario.Nombre>
              <input type="hidden" name="nombrePelicula" value=@ViewBag.Card.Titulo>
              <button type="submit">Enviar</button>
            </form>
            
        </div>

        <div class="cards">
             @foreach(var i in @ViewBag.Reseñas) {
              <div class="card">
              <div class="card-content">
                <h3>@i.NombreUsuario</h3>
                <p>@i.ReseñaTxt</p>
              </div>
              </div>
        }
