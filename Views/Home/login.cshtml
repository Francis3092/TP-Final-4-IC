    @{
    ViewData["Title"] = "Login";
    }
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <div class="login">
        <h1>Iniciar Sesión</h1>

        <form action='paginaInicio.html' method="post" id="login-form">
            <label for="UserName">Usuario</label>
            <input type="text" id="username" name="username" placeholder="Introduce tu nombre" required>
            <label for="Contraseña">Contraseña</label>
            <div class="password-input">
                <input type="password" name="contraseña" id="contraseña" placeholder="Introduce tu contraseña" required>
                <i class="fas fa-eye" id="toggle-password"></i>
            </div>
            <button type="submit">Iniciar Sesión</button>
        </form>

        <p><a href='olvideMiContraseña.html'>Olvidé Mi Contraseña</a></p>
    </div>